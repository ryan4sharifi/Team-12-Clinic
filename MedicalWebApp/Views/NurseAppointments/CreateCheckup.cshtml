@model WebApplication3.Models.AppointmentHealthInformation

@{
    ViewData["Title"] = "CreateCheckup";
}

<style>
    body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            color: #C8102E;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        h2 {
            background-color: #C8102E;
            color: white;
            padding: 20px;
            margin-bottom: 0;
        }

        #upcomingAppointments {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            padding: 20px;
            width: 110%; /* Adjusted width to 110% */
            max-width: 1100px; /* Adjusted max-width to 1100px */
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #C8102E;
            color: white;
        }

        .form-links {
            position: sticky;
            top: 0;
            background: #f4f4f4;
            padding: 10px;
            z-index: 100;
            text-align: center;
        }

        .dashboard-link {
            display: inline-block;
            background-color: #C8102E;
            color: white;
            padding: 10px 20px;
            margin: 10px 10px 0 0;
            text-decoration: none;
            border-radius: 4px;
        }

            .dashboard-link:hover {
                background-color: #A7001E;
            }

    .shadowed-site-container {
        max-width: 900px; /* Adjust the maximum width as needed */
        max-height: 100%; /* Set maximum height to 100% of the parent container */
        margin: auto; /* Center the container */
        padding: 20px; /* Add some padding to the container */
        border-radius: 8px; /* Add border radius for rounded corners */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
        background-color: #f7f7f7; /* Add a background color if desired */
        overflow: auto; /* Add overflow:auto to enable scrolling if content exceeds the container height */
    }

    .login-form-container {
        max-width: 600px; /* Adjust the maximum width as needed */
        margin: auto; /* Center the container */
        padding: 20px; /* Add some padding to the container */
        border-radius: 8px; /* Add border radius for rounded corners */
        background-color: #f7f7f7; /* Add a background color if desired */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
    }
</style>

<div class="login-form-container">

    <h4>Checkup Form</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateCheckup" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="appointment_id" class="control-label">Appointment ID</label>
                    <input asp-for="appointment_id" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="appointment_id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="weight_lbs" class="control-label">Weight (lbs)</label>
                    <input asp-for="weight_lbs" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="weight_lbs" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="height_inches" class="control-label">Height (inches)</label>
                    <input asp-for="height_inches" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="height_inches" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="heart_rate" class="control-label">Heart Rate</label>
                    <input asp-for="heart_rate" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="heart_rate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="systolic_pressure" class="control-label">Systolic Pressure</label>
                    <input asp-for="systolic_pressure" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="systolic_pressure" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="diastolic_pressure" class="control-label">Diastolic Pressure</label>
                    <input asp-for="diastolic_pressure" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="diastolic_pressure" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="temperature_fahrenheit" class="control-label">Temperature (°F)</label>
                    <input asp-for="temperature_fahrenheit" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="temperature_fahrenheit" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="medications_used" class="control-label">Medications Used</label>
                    <input asp-for="medications_used" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="medications_used" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="smoke_or_vape" class="control-label">Do you smoke/vape?</label>
                    <input asp-for="smoke_or_vape" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="smoke_or_vape" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="consume_alcohol" class="control-label">Do you consume alcohol?</label>
                    <input asp-for="consume_alcohol" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="consume_alcohol" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="allergies" class="control-label">Allergies</label>
                    <input asp-for="allergies" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="allergies" class="text-danger"></span>
                </div>

                <div class="form-group" style="padding: 10px;">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

<div style="margin-top: 20px; margin-bottom: 50px;">
    <button onclick="location.href='@Url.Action("Index", "Appointments")'" class="dashboard-link" type="button">Back to Appointments</button>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
