@model IEnumerable<WebApplication3.Models.NurseAppointments>

@{
    // Filter and order appointments for the current day by time of day
    var currentDateAppointments = Model
        .Where(a => a.date_appointment.Date == DateTime.Today)
        .OrderBy(a => a.date_appointment.TimeOfDay);
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nurse Dashboard</title>
    <style>
        /* Your existing styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            color: #C8102E;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        h2 {
            background-color: #C8102E;
            color: white;
            padding: 20px;
            margin-bottom: 0;
        }

        #upcomingAppointments {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            padding: 20px;
            width: 110%; /* Adjusted width to 110% */
            max-width: 1100px; /* Adjusted max-width to 1100px */
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #C8102E;
            color: white;
        }

        .form-links {
            position: sticky;
            top: 0;
            background: #f4f4f4;
            padding: 10px;
            z-index: 100;
            text-align: center;
        }

        .dashboard-link {
            display: inline-block;
            background-color: #C8102E;
            color: white;
            padding: 10px 20px;
            margin: 10px 10px 0 0;
            text-decoration: none;
            border-radius: 4px;
        }

            .dashboard-link:hover {
                background-color: #A7001E;
            }

        /* Add some styling for the popup overlay */
        #overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }


        }

        /* Add some styling for the close button */
        #closeButton {
            background-color: #C8102E;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
        }

            #closeButton:hover {
                background-color: #960C22;
            }
    </style>
</head>

<body>
    <h2>Nurse Dashboard</h2>
    <div>
        <div class="buttons">
            <button onclick="location.href='@Url.Action("CreateTest", "NurseAppointments")'" class="dashboard-link" type="button">Test Form</button>
            <button onclick="location.href='@Url.Action("CreateVaccine", "NurseAppointments")'" class="dashboard-link" type="button">Vaccine Form</button>
            <button onclick="location.href='@Url.Action("CreateCheckup", "NurseAppointments")'" class="dashboard-link" type="button">Checkup Form</button>
        </div>

        <div id="upcomingAppointments">
            <h3>Appointments for @DateTime.Today.ToString("yyyy-MM-dd")</h3>
            <table>
                <thead>
                    <tr>
                        <th>Appointment ID</th>
                        <th>Patient</th>
                        <th>Time</th>
                        <th>Office ID</th>
                        <th>Doctor</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in currentDateAppointments)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.appointment_id)</td>
                            <td>@Html.DisplayFor(modelItem => item.patient_id)</td>
                            <!-- Display formatted time of day -->
                            <td>@item.date_appointment.ToString("HH:mm")</td>
                            <td>@Html.DisplayFor(modelItem => item.office_id)</td>
                            <td>@Html.DisplayFor(modelItem => item.doctor_id)</td>
                            <td>
                                <a href="@Url.Action("Details", new { id = item.appointment_id })">Details</a>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>

    <section>
        <!-- Any additional sections can be added here -->
    </section>
</body>

</html>
