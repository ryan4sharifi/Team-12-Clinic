@model WebApplication3.Models.Tests

@{
    ViewData["Title"] = "CreateTest";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f4;
        color: #C8102E;
        text-align: center;
        margin: 0;
        padding: 0;
    }

    h2 {
        background-color: #C8102E;
        color: white;
        padding: 20px;
        margin-bottom: 0;
    }

    #upcomingAppointments {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        padding: 20px;
        width: 110%; /* Adjusted width to 110% */
        max-width: 1100px; /* Adjusted max-width to 1100px */
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th,
    td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #C8102E;
        color: white;
    }

    .form-links {
        position: sticky;
        top: 0;
        background: #f4f4f4;
        padding: 10px;
        z-index: 100;
        text-align: center;
    }

    .dashboard-link {
        display: inline-block;
        background-color: #C8102E;
        color: white;
        padding: 10px 20px;
        margin: 10px 10px 0 0;
        text-decoration: none;
        border-radius: 4px;
    }

        .dashboard-link:hover {
            background-color: #A7001E;
        }

    .shadowed-site-container {
        max-width: 900px; /* Adjust the maximum width as needed */
        max-height: 100%; /* Set maximum height to 100% of the parent container */
        margin: auto; /* Center the container */
        padding: 20px; /* Add some padding to the container */
        border-radius: 8px; /* Add border radius for rounded corners */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
        background-color: #f7f7f7; /* Add a background color if desired */
        overflow: auto; /* Add overflow:auto to enable scrolling if content exceeds the container height */
    }

    .login-form-container {
        max-width: 600px; /* Adjust the maximum width as needed */
        margin: auto; /* Center the container */
        padding: 20px; /* Add some padding to the container */
        border-radius: 8px; /* Add border radius for rounded corners */
        background-color: #f7f7f7; /* Add a background color if desired */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
    }
</style>

<div class=""style="padding: 20px;"></div>

<div class="login-form-container">

    <h1>Create</h1>

    <h4>Test Form</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateTest" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Getting rid of option to enter. This should be self incrementing by database -->

                <div class="form-group">
                    <label asp-for="patient_id" class="control-label">Patient ID</label>
                    <input asp-for="patient_id" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="patient_id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="doctor_id" class="control-label">Doctor ID</label>
                    <input asp-for="doctor_id" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="doctor_id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="date_test" class="control-label">Date of Test</label>
                    <input asp-for="date_test" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="date_test" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="time" class="control-label">Time</label>
                    <input asp-for="time" type="time" class="form-control" style="min-width: 560px;" />
                    <span asp-validation-for="time" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="description" class="control-label">Description</label>
                    <textarea asp-for="description" class="form-control" style="min-width: 560px;"></textarea>
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>

                <div class="form-group" style="padding: 10px;">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

<div style="margin-top: 20px; margin-bottom: 50px;">
    <button onclick="location.href='@Url.Action("Index", "Appointments")'" class="dashboard-link" type="button">Back to Appointments</button>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
