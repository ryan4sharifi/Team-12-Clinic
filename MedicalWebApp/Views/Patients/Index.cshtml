@model IEnumerable<med_test8.Models.Patients>

@{
    ViewData["Title"] = "Index";
}

<h3 class="less-bold">Patients</h3>

<p>
    <a asp-action="Create">Add New</a>
</p>
<table class="table smaller-text">
    <thead>
        <tr>
            <th> Patient ID </th>
            <th> Last </th>
            <th> First </th>
            <th> Middle </th>
            <th> DOB </th>
            <th> Gender </th>
            <th> Balance </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.patient_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.last_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.first_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.middle_initial)
                </td>
          
                <td>
                    @Html.DisplayFor(modelItem => item.DoB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.balance)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.patient_id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.patient_id">Details</a> |
                </td>
            </tr>
        }
    </tbody>
</table>