@model TrialRun.Models.Appointments

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit your appointment for @Html.DisplayFor(model => model.date_appointment) ? </h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="appointment_id" />

            <div class="form-group">
                <label asp-for="patient_id" class="control-label"><strong>Patient ID</strong></label>
                <input asp-for="patient_id" class="form-control" style="background-color: #f0f0f0;" readonly />
                <span asp-validation-for="patient_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="doctor_id" class="control-label"><strong>Doctor ID</strong></label>
                <input asp-for="doctor_id" class="form-control" style="background-color: #f0f0f0;" readonly />
                <span asp-validation-for="doctor_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="appointment_id" class="control-label"><strong>Appointment ID</strong></label>
                <input asp-for="appointment_id" class="form-control" style="background-color: #f0f0f0;" readonly />
                <span asp-validation-for="appointment_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_appointment" class="control-label"><strong>Appointment Date</strong></label>
                <input asp-for="date_appointment" class="form-control" />
                <span asp-validation-for="date_appointment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
