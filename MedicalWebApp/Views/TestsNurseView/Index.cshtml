@model IEnumerable<WebApplication3.Models.TestDetails>

@{
    ViewData["Title"] = "Index";
}

<style>

    body {
        font-family: Arial, sans-serif;
        background-color: #FFFFFF;
        color: #000000;
    }


    .table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 20px;
    }

        .table th, .table td {
            border: 1px solid #DDDDDD;
            padding: 8px;
            text-align: left;
        }


    thead {
        background-color: #C8102E;
        color: #FFFFFF;
    }

    th {
        font-weight: bold;
    }


    tbody tr:nth-child(odd) {
        background-color: #F2F2F2;
    }

    tbody tr:hover {
        background-color: #EAEAEA;
    }


    a {
        color: #C8102E;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h1>All Submitted Tests</h1>

<p>
    <a asp-action="CreateTest">Test Form</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Patient ID
            </th>
            <th>
                Patient Name
            </th>
            <th>
                Test Date
            </th>
            <th>
                Requesting Doctor
            </th>
            <th>
                Doctor Email
            </th>
            <th>
                Patient Email
            </th>
            <th>
                Status
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.patient_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_test)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.doctor_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.test_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.test_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.test_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
