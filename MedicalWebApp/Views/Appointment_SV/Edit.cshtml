@model med_test8.Models.Appointments

@{
    ViewData["Title"] = "Edit";
}

<style>
    .form-container {
        max-width: 600px; /* Adjust the maximum width as needed */
        margin: 0 auto; /* Center the container */
    }

    .buttons {
        max-width: 200px; /* Adjust the maximum width as needed */
        margin: 0; /* Center the container */
    }
</style>

<div class="blueHeader">
    <header> Office Admin View </header>
</div>
<div style="padding-bottom: 20px;"></div>

<h1>Edit</h1>

<h4>Appointments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-container">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="appointment_id" />

                <div class="form-group">
                    <label asp-for="patient_id" class="control-label"></label>
                    <input asp-for="patient_id" class="form-control" readonly />
                    <span asp-validation-for="patient_id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="date_appointment" class="control-label"></label>
                    <input asp-for="date_appointment" class="form-control" />
                    <span asp-validation-for="date_appointment" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="office_id" class="control-label"></label>
                    <input asp-for="office_id" class="form-control" readonly />
                    <span asp-validation-for="office_id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="doctor_id" class="control-label"></label>
                    <input asp-for="doctor_id" class="form-control" readonly />
                    <span asp-validation-for="doctor_id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

    <div class="buttons">
        <button onclick="location.href='@Url.Action("Index", "Appointment_SV")'" class="custom-button" type="button">Back to List</button>
    </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}