<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Team 12 Clinic</title>
    <!-- Removed Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nav.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedicalWebApp.styles.css" asp-append-version="true" />
    <!-- jQuery is still included, in case you use it for other scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>




<body>
    <header>
        <nav>
            <div class="container">

                <a href="/" class="brand">Team 12 Clinic</a>
                <div class="nav-toggle">
                    <div class="bar1"></div>
                    <div class="bar2"></div>
                    <div class="bar3"></div>
                </div>
                <div class="navigation">
                    <ul>
                        <li>
                            <a href="/Index">Home</a>
                        </li>
                        <li>
                            <a href="/Privacy">Privacy</a>
                        </li>
                        <li>
                            <a href="/Appointments/ScheduleAppointment">Make an Appointment</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a href="/Dashboards/AdminDashboard">Admin Home</a>
                            </li>
                        }
                        else if (User.IsInRole("Doctor"))
                        {
                            <li>
                                <a href="/Dashboards/DoctorDashboard">Doctor Home</a>
                            </li>
                        }
                        else if (User.IsInRole("Nurse"))
                        {
                            <li>
                                <a href="/Dashboards/NurseDashboard">Nurse Home</a>
                            </li>
                        }
                        else if (User.IsInRole("Patient"))
                        {
                            <li>
                                <a href="/Dashboards/PatientDashboard">Patient Home</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!--
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - med_test8 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>

    </footer>
        -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
