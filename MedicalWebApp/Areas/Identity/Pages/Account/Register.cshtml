@page
@model RegisterModel

<style>
    /* Your existing styles */
    .center { /* ... */
    }

    .form-container { /* ... */
    }
</style>

<div class="center">
    <div class="login-form-container">
        <h2>Patient Registration</h2>

        <form method="post">
            <div>
                <label>Email</label>
                <input asp-for="Input.Email" required />
                <span asp-validation-for="Input.Email"></span>
            </div>
            <div>
                <label>Password</label>
                <input asp-for="Input.Password" type="password" required />
                <span asp-validation-for="Input.Password"></span>
            </div>

            <!-- Patient Fields -->
            <div id="PatientFields">
                <h3>Patient Details</h3>
                <label>First Name</label>
                <input asp-for="Input.FirstName" required />

                <label>Middle Initial</label>
                <input asp-for="Input.MiddleInitial" />

                <label>Last Name</label>
                <input asp-for="Input.LastName" required />

                <label>Address</label>
                <input asp-for="Input.Address" required />

                <label>Phone</label>
                <input asp-for="Input.Phone" required />

                <label>Gender</label>
                <select asp-for="Input.Gender" required>
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                    <!-- Other gender options as necessary -->
                </select>

                <label>Date of Birth</label>
                <input asp-for="Input.DoB" type="date" required />
            </div>

            <button type="submit">Register</button>
        </form>
    </div>
</div>

